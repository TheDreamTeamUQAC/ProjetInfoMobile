<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dtuqac.runtimerapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadActivity"
            android:label="@string/Load_Activity_Name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dtuqac.runtimerapp.MainActivity" />
        </activity>
        <activity
            android:name=".TimerActivity"
            android:label="@string/Timer_Activity_Name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dtuqac.runtimerapp.MainActivity" />
        </activity>
        <activity
            android:name=".SpeedRunForm"
            android:label="@string/title_activity_speed_run_form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditSplits"
            android:label="@string/title_activity_edit_splits"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dtuqac.runtimerapp.MainActivity" />
        </activity>
    </application>

</manifest>